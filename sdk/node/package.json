{
	"name": "meel",
	"description": "Typescript wrapper for the Meel project",
	"version": "0.0.9",
	"author": {
		"name": "borisnliscool",
		"url": "https://github.com/borisnliscool"
	},
	"license": "MIT",
	"repository": {
		"url": "https://github.com/borisnliscool/meel",
		"type": "git"
	},
	"homepage": "https://meel.dev",
	"type": "module",
	"module": "src/index.ts",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "rimraf dist && tsc --project tsconfig.build.json && uglifyjs-folder dist/ -e -x .js -o dist/",
		"prepublish": "bun run build",
		"lint": "bun run prettier . --check && eslint .",
		"format": "pnpm prettier . --write"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"eslint": "^9.14.0",
		"globals": "^15.12.0",
		"prettier": "3.3.3",
		"rimraf": "^6.0.1",
		"typescript-eslint": "^8.13.0",
		"uglifyjs-folder": "^3.3.0"
	},
	"dependencies": {
		"@borisnl/tried": "^1.0.5",
		"ky": "^1.7.2"
	}
}
