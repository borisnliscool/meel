{
	"name": "meel",
	"displayName": "Meel",
	"description": "A developer extension for using the Meel project.",
	"version": "0.0.1",
	"author": {
		"name": "borisnliscool",
		"url": "https://github.com/borisnliscool"
	},
	"license": "MIT",
	"repository": {
		"url": "https://github.com/borisnliscool/meel",
		"type": "git"
	},
	"homepage": "https://meel.dev",
	"packageManager": "pnpm@9.12.3",
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "meel",
				"aliases": [
					"Meel Template"
				],
				"extensions": [
					".meel"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "meel",
				"scopeName": "source.meel",
				"path": "./syntaxes/meel.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && node esbuild.js --production",
		"check-types": "tsc --noEmit",
		"build": "pnpm run compile",
		"lint": "pnpm prettier . --check && eslint .",
		"format": "pnpm prettier . --write"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"@types/node": "20.x",
		"@types/vscode": "^1.95.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.14.0",
		"globals": "^15.12.0",
		"prettier": "3.3.3",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0"
	}
}
